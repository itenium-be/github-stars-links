root = true

[*]
indent_style = space
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[manifest.json]
indent_size = 4

[*.{js,ts}]
indent_size = 2

[gulpfile.js]
indent_style = tab
indent_size = 3

[*.md]
indent_size = 2
trim_trailing_whitespace = false
